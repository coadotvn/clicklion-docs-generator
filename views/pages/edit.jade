extends ../layouts/default

block var
  - js = ['/bower/marked/marked.min.js', '/js/pages/form.js']

block content
  .rw
    .cl
      
      h1 Edit page

  .rw
    .cl.sm-6
      #markup.document

    .cl.sm-6
      form(method="post")
        label Title
          input#title(type="text" name="title" value=doc.title)
        label Slug
          input#slug(type="text" name="slug" value=doc.slug)
        label Description
          input#description(type="text" name="description" value=doc.description)
        label Body
          textarea#body(name="body" rows="20")= doc.body
        input(type="submit" value="Save").bt.s.rd